@model Task.Models.Order

@{
    ViewBag.Title = "Create";
}

<h1>Checkout</h1>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create" method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Request_Date" class="control-label">
                    Request_Date
                </label>
                <input name="Request_Date" class="form-control" readonly value="@DateTime.Now" />
            </div>
            <div class="form-group">
                <label asp-for="Total_Price" class="control-label">
                    Total_Price
                </label>
                <input name="Total_Price" class="form-control" readonly value="@ViewBag.cost" />
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label">
                    Address
                </label>
                <input name="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Phone" class="control-label">
                    Phone
                </label>
                <input name="Phone" class="form-control" />
                <span asp-validation-for="Phone" class="text-danger"></span>
            </div>
            <div class="form-group">
                @*<a href="~/Order/Create?total=@ViewBag.cost" class="btn btn-primary">
                        Order Now
                    </a>*@
                <input style="background-color:darkslategray" type="submit" value="Order Now" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    @Html.ActionLink("Back to Cart", "Index")
</div>
<script src="~/Scripts/jquery.validate.js"></script>
<script src="~/Scripts/jquery.validate.unobtrusive.js"></script>